<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <embeddable name="App\Aggregator\Domain\Model\ValueObject\Credibility\Credibility">
        <field name="bias" enum-type="App\Aggregator\Domain\Model\ValueObject\Credibility\Bias">
            <options>
                <option name="default">neutral</option>
            </options>
        </field>
        <field name="reliability" enum-type="App\Aggregator\Domain\Model\ValueObject\Credibility\Reliability">
            <options>
                <option name="default">reliable</option>
            </options>
        </field>
        <field name="transparency" enum-type="App\Aggregator\Domain\Model\ValueObject\Credibility\Transparency">
            <options>
                <option name="default">medium</option>
            </options>
        </field>
    </embeddable>
</doctrine-mapping>
